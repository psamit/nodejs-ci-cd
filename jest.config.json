{
  "testPathIgnorePatterns": ["/node_modules/", "/build/"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 85,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "collectCoverageFrom": ["**/*.ts", "!build/**", "!coverage/**"],
  "testTimeout": 10000,
  "setupFilesAfterEnv": ["./jest.setup.js"]
}
